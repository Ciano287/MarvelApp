<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_marvel_recycler_view_character"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginBottom="276dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_marvel_recycler_view_comics"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/my_marvel_character_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        android:text="@string/comic_detail_plain_characters"
        app:layout_constraintBottom_toTopOf="@+id/my_marvel_recycler_view_character"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/my_marvel_comic_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="11dp"
        android:text="@string/character_detail_plain_comics"
        app:layout_constraintBottom_toTopOf="@+id/my_marvel_recycler_view_comics"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>